<Window x:Class="ZeusDNSChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zeus DNS Changer" 
        Height="720" 
        Width="820"
        Background="{StaticResource DarkBackgroundBrush}"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Closing="Window_Closing">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Navigation Bar -->
        <Border x:Name="TopBar"
                Grid.Row="0" 
                Background="{StaticResource DarkBackgroundBrush}"
                BorderBrush="{StaticResource DarkBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,10"
                FlowDirection="LeftToRight">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="⚡" 
                              FontSize="26" 
                              Foreground="{StaticResource GoldBrush}"
                              Margin="0,0,10,0"
                              VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Zeus DNS Changer" 
                                  FontSize="17" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource GoldBrush}"/>
                        <TextBlock Text="Secure and Fast DNS Management" 
                                  FontSize="10" 
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <!-- Home -->
                    <Button x:Name="NavHomeButton"
                           Click="NavHome_Click"
                           Style="{StaticResource NavIconButtonStyle}"
                           Background="{StaticResource GoldBrush}"
                           ToolTip="Home"
                           Margin="0,0,6,0">
                        <Path x:Name="NavHomeIcon" 
                              Data="M200-280h560q33 0 56.5-23.5T840-360v-240q0-33-23.5-56.5T760-680H200q-33 0-56.5 23.5T120-600v240q0 33 23.5 56.5T200-280Zm80 120v-40h-80q-66 0-113-47T40-360v-240q0-66 47-113t113-47h560q66 0 113 47t47 113v240q0 66-47 113t-113 47h-80v40H280Zm200-320Z" 
                              Fill="{DynamicResource TextPrimaryBrush}"
                              Width="30" Height="25" Stretch="Uniform"/>
                    </Button>
                    
                    <!-- Manage DNS -->
                    <Button x:Name="NavManageButton"
                           Click="NavManage_Click"
                           Style="{StaticResource NavIconButtonStyle}"
                           ToolTip="Manage DNS"
                           Margin="0,0,6,0">
                        <Path x:Name="NavManageIcon"
                              Data="M300-720q-25 0-42.5 17.5T240-660q0 25 17.5 42.5T300-600q25 0 42.5-17.5T360-660q0-25-17.5-42.5T300-720Zm0 400q-25 0-42.5 17.5T240-260q0 25 17.5 42.5T300-200q25 0 42.5-17.5T360-260q0-25-17.5-42.5T300-320ZM160-840h640q17 0 28.5 11.5T840-800v280q0 17-11.5 28.5T800-480H160q-17 0-28.5-11.5T120-520v-280q0-17 11.5-28.5T160-840Zm40 80v200h560v-200H200Zm-40 320h640q17 0 28.5 11.5T840-400v280q0 17-11.5 28.5T800-80H160q-17 0-28.5-11.5T120-120v-280q0-17 11.5-28.5T160-440Zm40 80v200h560v-200H200Zm0-400v200-200Zm0 400v200-200Z" 
                              Fill="{DynamicResource TextPrimaryBrush}"
                              Width="30" Height="25" Stretch="Uniform"/>
                    </Button>
                    
                    <!-- Activity Logs -->
                    <Button x:Name="NavLogsButton"
                           Click="NavLogs_Click"
                           Style="{StaticResource NavIconButtonStyle}"
                           ToolTip="Activity Logs"
                           Margin="0,0,6,0">
                        <Path x:Name="NavLogsIcon"
                              Data="M610-760q-21 0-35.5-14.5T560-810q0-21 14.5-35.5T610-860q21 0 35.5 14.5T660-810q0 21-14.5 35.5T610-760Zm0 660q-21 0-35.5-14.5T560-150q0-21 14.5-35.5T610-200q21 0 35.5 14.5T660-150q0 21-14.5 35.5T610-100Zm160-520q-21 0-35.5-14.5T720-670q0-21 14.5-35.5T770-720q21 0 35.5 14.5T820-670q0 21-14.5 35.5T770-620Zm0 380q-21 0-35.5-14.5T720-290q0-21 14.5-35.5T770-340q21 0 35.5 14.5T820-290q0 21-14.5 35.5T770-240Zm60-190q-21 0-35.5-14.5T780-480q0-21 14.5-35.5T830-530q21 0 35.5 14.5T880-480q0 21-14.5 35.5T830-430ZM480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880v80q-134 0-227 93t-93 227q0 134 93 227t227 93v80Zm132-212L440-464v-216h80v184l148 148-56 56Z" 
                              Fill="{DynamicResource TextPrimaryBrush}"
                              Width="30" Height="25" Stretch="Uniform"/>
                    </Button>
                    
                    <!-- Settings -->
                    <Button x:Name="NavSettingsButton"
                           Click="NavSettings_Click"
                           Style="{StaticResource NavIconButtonStyle}"
                           ToolTip="Settings">
                        <Path x:Name="NavSettingsIcon"
                              Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                              Fill="{DynamicResource TextPrimaryBrush}"
                              Width="30" Height="25" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" x:Name="ContentArea">
            <!-- Home Page -->
            <Grid x:Name="HomePage" Visibility="Visible">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Toggle Button -->
                    <Grid Width="160" Height="160" Margin="0,0,0,30">
                        <Ellipse x:Name="ToggleCircle"
                                Width="160"
                                Height="160"
                                Fill="{StaticResource DarkBorderBrush}"
                                Cursor="Hand"
                                MouseLeftButtonDown="ToggleSwitch_Click">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black" 
                                                 BlurRadius="25" 
                                                 ShadowDepth="6" 
                                                 Opacity="0.5"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <StackPanel VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock x:Name="ToggleIcon"
                                      Text="&#xE7E8;" 
                                      FontFamily="Segoe MDL2 Assets" 
                                      FontSize="48"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" 
                                      Text="OFF" 
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- DNS Server Selection -->
                    <Border x:Name="DnsSelectionCard"
                           Background="{StaticResource DarkSurfaceBrush}"
                           BorderBrush="{StaticResource DarkBorderBrush}"
                           BorderThickness="1"
                           CornerRadius="10"
                           Padding="24"
                           Width="380">
                        <StackPanel>
                            <Label x:Name="SelectDnsLabel"
                                   Content="Select DNS Server" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                            <ComboBox x:Name="DnsServerComboBox" 
                                     SelectionChanged="DnsServerComboBox_SelectionChanged"
                                     Margin="0,8,0,0">
                                <ComboBoxItem Content="Zeus Free" IsSelected="True"/>
                                <ComboBoxItem Content="Zeus Plus"/>
                                <ComboBoxItem Content="Google DNS"/>
                                <ComboBoxItem Content="Cloudflare DNS"/>
                            </ComboBox>
                            
                            <!-- Zeus Plus Section -->
                            <Border x:Name="TokenPanel" 
                                   Visibility="Collapsed" 
                                   Margin="0,8,0,0"
                                   Background="{StaticResource DarkBackgroundBrush}"
                                   BorderBrush="{StaticResource GoldBrush}"
                                   BorderThickness="2"
                                   CornerRadius="8"
                                   Padding="16">
                                <StackPanel>
                                    <Label x:Name="TokenLabel"
                                           Content="Zeus Plus Token" 
                                           FontSize="12"
                                           Foreground="{StaticResource GoldBrush}"/>
                                    <TextBox x:Name="TokenTextBox" 
                                            Height="35"
                                            Margin="0,6,0,0"/>
                                    
                                    <Label x:Name="IntervalLabel"
                                           Content="Update Interval (minutes)" 
                                           FontSize="12" 
                                           Margin="0,12,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="IntervalSlider" 
                                               Grid.Column="0"
                                               Minimum="1" 
                                               Maximum="60" 
                                               Value="5"
                                               TickFrequency="1"
                                               IsSnapToTickEnabled="True"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"
                                               ValueChanged="IntervalSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding ElementName=IntervalSlider, Path=Value, StringFormat={}{0:0} min}"
                                                  Foreground="{StaticResource GoldBrush}"
                                                  FontSize="12"
                                                  FontWeight="Bold"
                                                  VerticalAlignment="Center"
                                                  Width="60"
                                                  TextAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Network Info Summary -->
                            <Border x:Name="NetworkInfoCard"
                                   Margin="0,8,0,0"
                                   Background="{StaticResource DarkBackgroundBrush}"
                                   BorderBrush="{StaticResource DarkBorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xE968;" 
                                              Grid.Column="0"
                                              FontFamily="Segoe MDL2 Assets" 
                                              FontSize="18"
                                              Foreground="{StaticResource GoldBrush}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock x:Name="Ipv4Text" 
                                                  Text="Loading IP..." 
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  FontSize="13"
                                                  FontWeight="SemiBold"/>
                                        <TextBlock x:Name="ActiveDnsText" 
                                                  Text="Loading DNS..." 
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  FontSize="11"
                                                  Margin="0,4,0,0"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Clear Cache Button -->
                            <Button x:Name="ClearCacheButton"
                                   Content="Clear DNS Cache"
                                   Height="38"
                                   Margin="0,10,0,0"
                                   Click="ClearCacheButton_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- Manage DNS Page -->
            <Grid x:Name="ManagePage" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border x:Name="ManageDnsHeader"
                        Grid.Row="0" 
                        Background="{StaticResource DarkSurfaceBrush}"
                        BorderBrush="{StaticResource DarkBorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="40,20">
                    <TextBlock x:Name="ManageDnsTitle"
                              Text="Manage DNS Servers" 
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="{StaticResource GoldBrush}"/>
                </Border>
                
                <!-- Content -->
                <Grid Grid.Row="1">
                    <!-- DNS List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="40,20">
                        <StackPanel x:Name="CustomDnsListPanel">
                            <!-- Built-in DNS Servers (Read-only) -->
                            <TextBlock x:Name="BuiltInDnsLabel"
                                      Text="Built-in DNS Servers" 
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <!-- Zeus Free -->
                            <Border x:Name="ZeusFreeCard"
                                   Background="{StaticResource DarkSurfaceBrush}"
                                   BorderBrush="{StaticResource DarkBorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Zeus Free" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Primary: 37.32.5.60" 
                                                  FontSize="11"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1"
                                              Text="Built-in"
                                              FontSize="11"
                                              Foreground="{StaticResource GoldBrush}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Zeus Plus -->
                            <Border x:Name="ZeusPlusCard"
                                   Background="{StaticResource DarkSurfaceBrush}"
                                   BorderBrush="{StaticResource DarkBorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Zeus Plus" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Primary: 37.32.5.34" 
                                                  FontSize="11"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1"
                                              Text="Built-in"
                                              FontSize="11"
                                              Foreground="{StaticResource GoldBrush}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Google DNS -->
                            <Border x:Name="GoogleDnsCard"
                                   Background="{StaticResource DarkSurfaceBrush}"
                                   BorderBrush="{StaticResource DarkBorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Google DNS" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Primary: 8.8.8.8 | Secondary: 8.8.4.4" 
                                                  FontSize="11"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1"
                                              Text="Built-in"
                                              FontSize="11"
                                              Foreground="{StaticResource GoldBrush}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Cloudflare DNS -->
                            <Border x:Name="CloudflareDnsCard"
                                   Background="{StaticResource DarkSurfaceBrush}"
                                   BorderBrush="{StaticResource DarkBorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Cloudflare DNS" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Primary: 1.1.1.1 | Secondary: 1.0.0.1" 
                                                  FontSize="11"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1"
                                              Text="Built-in"
                                              FontSize="11"
                                              Foreground="{StaticResource GoldBrush}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Custom DNS Servers -->
                            <TextBlock x:Name="CustomDnsLabel"
                                      Text="Custom DNS Servers" 
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      Margin="0,0,0,10"/>
                            <StackPanel x:Name="CustomDnsItemsPanel"/>
                            
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Floating Action Button -->
                    <Button x:Name="FabAddDns"
                           Width="60"
                           Height="60"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,0,40,40"
                           Click="FabAddDns_Click"
                           Style="{StaticResource FabButtonStyle}">
                        <TextBlock Text="&#xE710;" 
                                  FontFamily="Segoe MDL2 Assets" 
                                  FontSize="24"
                                  Foreground="White"/>
                    </Button>
                </Grid>
                
                <!-- Add DNS Dialog -->
                <Border x:Name="AddDnsDialog"
                       Grid.RowSpan="2"
                       Background="#AA000000"
                       Visibility="Collapsed">
                    <Border x:Name="AddDnsDialogBox"
                           Background="{StaticResource DarkSurfaceBrush}"
                           BorderBrush="{StaticResource GoldBrush}"
                           BorderThickness="2"
                           CornerRadius="10"
                           Width="420"
                           Padding="24"
                           VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock x:Name="AddDnsDialogTitle"
                                      Text="Add Custom DNS Server" 
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource GoldBrush}"
                                      Margin="0,0,0,16"/>
                            
                            <Label x:Name="DnsNameLabel" Content="DNS Name" FontSize="12"/>
                            <Grid>
                                <TextBox x:Name="DnsNameTextBox" 
                                        Height="36"
                                        Margin="0,4,0,12"
                                        TextChanged="DnsNameTextBox_TextChanged"/>
                                <TextBlock x:Name="DnsNameHint"
                                          Text="e.g. My Custom DNS"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          FontSize="13"
                                          Margin="12,0,0,10"
                                          VerticalAlignment="Center"
                                          IsHitTestVisible="False"
                                          Visibility="Visible"/>
                            </Grid>
                            
                            <Label x:Name="PrimaryDnsLabel" Content="Primary DNS" FontSize="12"/>
                            <Grid>
                                <TextBox x:Name="PrimaryDnsTextBox" 
                                        Height="36"
                                        Margin="0,4,0,12"
                                        TextChanged="PrimaryDnsTextBox_TextChanged"/>
                                <TextBlock x:Name="PrimaryDnsHint"
                                          Text="e.g. 8.8.8.8"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          FontSize="13"
                                          Margin="12,0,0,10"
                                          VerticalAlignment="Center"
                                          IsHitTestVisible="False"
                                          Visibility="Visible"/>
                            </Grid>
                            
                            <Label x:Name="SecondaryDnsLabel" Content="Secondary DNS (Optional)" FontSize="12"/>
                            <Grid>
                                <TextBox x:Name="SecondaryDnsTextBox" 
                                        Height="36"
                                        Margin="0,4,0,16"
                                        TextChanged="SecondaryDnsTextBox_TextChanged"/>
                                <TextBlock x:Name="SecondaryDnsHint"
                                          Text="e.g. 8.8.4.4"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          FontSize="13"
                                          Margin="12,0,0,10"
                                          VerticalAlignment="Center"
                                          IsHitTestVisible="False"
                                          Visibility="Visible"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="CancelAddDnsButton"
                                       Grid.Column="1"
                                       Content="Cancel"
                                       Width="90"
                                       Height="36"
                                       Margin="0,0,8,0"
                                       Click="CancelAddDns_Click"/>
                                <Button x:Name="AddDnsButton"
                                       Grid.Column="2"
                                       Content="Add"
                                       Width="90"
                                       Height="36"
                                       Click="AddDnsConfirm_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Border>
            </Grid>
            
            <!-- Logs Page -->
            <Grid x:Name="LogsPage" Visibility="Collapsed">
                <Border x:Name="LogsCard"
                       Background="{StaticResource DarkSurfaceBrush}"
                       BorderBrush="{StaticResource DarkBorderBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Margin="30"
                       Padding="16">
                    <StackPanel>
                        <TextBlock x:Name="LogsTitle"
                                  Text="Activity Logs" 
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource GoldBrush}"
                                  Margin="0,0,0,16"/>
                        
                        <Border x:Name="LogsInnerCard"
                               Background="{StaticResource DarkBackgroundBrush}"
                               BorderBrush="{StaticResource DarkBorderBrush}"
                               BorderThickness="1"
                               CornerRadius="6"
                               Height="320">
                            <TextBox x:Name="LogTextBlock" 
                                    Text="No activity yet..."
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="11"
                                    FontFamily="Consolas"
                                    Padding="12"
                                    TextWrapping="Wrap"
                                    IsReadOnly="True"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Disabled"
                                    AcceptsReturn="True"/>
                        </Border>
                        
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="CopyLogsButton"
                                   Grid.Column="1"
                                   Content="Copy Logs"
                                   Width="118"
                                   Height="38"
                                   Margin="0,0,8,0"
                                   Click="CopyLogs_Click"/>
                            <Button x:Name="ClearLogsButton"
                                   Grid.Column="2"
                                   Content="Clear Logs"
                                   Width="118"
                                   Height="38"
                                   Click="ClearLogs_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Settings Page -->
            <Grid x:Name="SettingsPageContent" Visibility="Collapsed">
                <Border x:Name="SettingsCard"
                       Background="{StaticResource DarkSurfaceBrush}"
                       BorderBrush="{StaticResource DarkBorderBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Margin="30"
                       Padding="24"
                       MaxWidth="520">
                    <StackPanel>
                        <TextBlock x:Name="SettingsTitle"
                                  Text="Settings" 
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource GoldBrush}"
                                  Margin="0,0,0,20"/>
                        
                        <!-- Theme Setting -->
                        <Border x:Name="ThemeSettingBorder"
                               Background="{StaticResource DarkBackgroundBrush}"
                               BorderBrush="{StaticResource DarkBorderBrush}"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="ThemeTitleText"
                                              Text="Theme" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="ThemeDescText"
                                              Text="Switch between Dark and Light mode" 
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>
                                <ComboBox x:Name="ThemeComboBox"
                                         Grid.Column="1"
                                         Width="110"
                                         SelectionChanged="ThemeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Dark" Tag="Dark" IsSelected="True"/>
                                    <ComboBoxItem Content="Light" Tag="Light"/>
                                </ComboBox>
                            </Grid>
                        </Border>
                        
                        <!-- Language Setting -->
                        <Border x:Name="LanguageSettingBorder"
                               Background="{StaticResource DarkBackgroundBrush}"
                               BorderBrush="{StaticResource DarkBorderBrush}"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="LanguageTitleText"
                                              Text="Language" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="LanguageDescText"
                                              Text="Change application language" 
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>
                                <ComboBox x:Name="LanguageComboBox"
                                         Grid.Column="1"
                                         Width="110"
                                         SelectionChanged="LanguageComboBox_SelectionChanged">
                                    <ComboBoxItem Content="English" Tag="English" IsSelected="True"/>
                                    <ComboBoxItem Content="فارسی" Tag="Persian"/>
                                </ComboBox>
                            </Grid>
                        </Border>
                        
                        <!-- Auto-refresh IP Setting -->
                        <Border x:Name="AutoRefreshSettingBorder"
                               Background="{StaticResource DarkBackgroundBrush}"
                               BorderBrush="{StaticResource DarkBorderBrush}"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="AutoRefreshTitleText"
                                              Text="Auto-refresh IP" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="AutoRefreshDescText"
                                              Text="Automatically check and update IP when connected" 
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="AutoRefreshCheckBox"
                                         Grid.Column="1"
                                         IsChecked="True"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Start with Windows Setting -->
                        <Border x:Name="StartupSettingBorder"
                               Background="{StaticResource DarkBackgroundBrush}"
                               BorderBrush="{StaticResource DarkBorderBrush}"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="StartupTitleText"
                                              Text="Start with Windows" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="StartupDescText"
                                              Text="Launch application when Windows starts" 
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="StartupCheckBox"
                                         Grid.Column="1"
                                         IsChecked="False"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Save Button -->
                        <Button x:Name="SaveSettingsButton"
                               Content="Save Settings"
                               Width="130"
                               Height="38"
                               HorizontalAlignment="Right"
                               Click="SaveSettings_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Custom Message Dialog -->
        <Border x:Name="CustomMessageDialog"
               Grid.Row="0"
               Grid.RowSpan="2"
               Background="#88000000"
               Visibility="Collapsed"
               Panel.ZIndex="1000">
            <Border x:Name="CustomDialogBox"
                   Background="{StaticResource DarkSurfaceBrush}"
                   BorderBrush="{StaticResource GoldBrush}"
                   BorderThickness="2"
                   CornerRadius="12"
                   Width="380"
                   Padding="24"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Icon and Title -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock x:Name="DialogIcon"
                                  Text="&#xE946;"
                                  FontFamily="Segoe MDL2 Assets"
                                  FontSize="28"
                                  Foreground="{StaticResource GoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>
                        <TextBlock x:Name="DialogTitle"
                                  Text="Message"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Message -->
                    <TextBlock x:Name="DialogMessage"
                              Text="Message content here"
                              FontSize="13"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>
                    
                    <!-- Buttons -->
                    <StackPanel x:Name="DialogButtons" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="DialogCancelButton"
                               Content="Cancel"
                               Width="90"
                               Height="36"
                               Margin="0,0,8,0"
                               Visibility="Collapsed"
                               Click="DialogCancel_Click"/>
                        <Button x:Name="DialogOkButton"
                               Content="OK"
                               Width="90"
                               Height="36"
                               Click="DialogOk_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
